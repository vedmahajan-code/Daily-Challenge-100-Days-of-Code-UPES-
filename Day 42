//Q83: Count vowels and consonants in a string.
#include<stdio.h>
void count_vowel(char *arr,int *length,int *vowel){
    while(*arr != '\0'){
        if(*arr=='A'||*arr=='E'||*arr=='I'||*arr=='O'||*arr=='U'||*arr=='a'||*arr=='e'||*arr=='i'||*arr=='o'||*arr=='u'){
            (*vowel)++;
        }
        (*length)++;
        arr++;
    }
}
int main() {
    int length=0,vowel=0;
    char str[100];
    printf("enter a string\n");
    fgets(str,sizeof(str),stdin);
    count_vowel(str,&length,&vowel);
    printf("Vowels=%d, Consonants=%d",vowel,length-vowel);
    return 0;
}

//Q84: Convert a lowercase string to uppercase without using built-in functions.
#include<stdio.h>
void change_case(char *arr){
    while(*arr != '\0'){
        if(*arr>=97 && *arr<=122){
            *arr-=32;
        }
        arr++;
    }
}
int main() {
    int length=0,vowel=0;
    char str[100];
    printf("enter a string in lowercase\n");
    fgets(str,sizeof(str),stdin);
    change_case(str);
    printf("%s",str);
    return 0;
}
