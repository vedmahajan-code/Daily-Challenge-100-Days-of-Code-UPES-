//Q43: Write a program to check if a number is a strong number.
#include<stdio.h>
int factorial(int n){
    if(n==1 || n==0){
        return 1;
    }else{
        int fac = n*factorial(n-1);
        return fac;
    }
}
int main(){
    int num,sum=0;
    printf("enter a number\n");
    scanf("%d",&num);
    int temp = num;
    while(temp>0){
        int last_digit = temp%10;
        temp/=10;
        sum += factorial(last_digit);
    }
    sum==num?printf("Strong number\n"):printf("Not strong number\n");
    return 0;
}

//Q44: Write a program to find the sum of the series: 1 + 3/4 + 5/6 + 7/8 + â€¦ up to n terms.
#include <stdio.h>
int main(){
    int n,i=1;
    float sum=1,term;
    printf("enter a number till which you want the sum of series\n");
    scanf("%d",&n);
    while(i<n){
        term =(float)(2*i+1)/(2*i+2);
        sum+=term;
        i++;
    }
    printf("Approximate sum: %.2f",sum);

    return 0;
}
