/*Q47: Write a program to print the following pattern:
*
**
***
****
*****
*/
#include <stdio.h>
int main(){
    for(int i=1;i<=5;i+=1){
        for(int j=0;j<i;j++){
            printf("*");
        }
        printf("\n");
    }
    return 0;
}

/*Q48: Write a program to print the following pattern:
1
12
123
1234
12345
*/
#include <stdio.h>
int main(){
    for(int i=5;i>=1;i--){
        int k=1;
        for(int j=5;j>=i;j--){
            printf("%d",k);
            k++;
        }
        printf("\n");
    }
    return 0;
}
