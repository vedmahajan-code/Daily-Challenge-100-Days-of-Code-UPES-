//Q120: Write a program to take a string input. Change it to sentence case.
#include <stdio.h>
#include <ctype.h>
#include <string.h>
int main() {
    char str[1000];
    // Read full line including spaces
    fgets(str, sizeof(str), stdin);
    int len = strlen(str);
    int capitalizeNext = 1;  // flag to capitalize first letter of each word
    for (int i = 0; i < len; i++) {
        if (isspace(str[i])) {
            capitalizeNext = 1;  // next character should be capitalized
        } else if (capitalizeNext && isalpha(str[i])) {
            str[i] = toupper(str[i]);
            capitalizeNext = 0;
        } else {
            str[i] = tolower(str[i]);  // ensure rest are lowercase
        }
    }
    // Print result
    printf("%s", str);
    return 0;
}
