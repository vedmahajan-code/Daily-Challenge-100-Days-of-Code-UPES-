//Q41: Write a program to swap the first and last digit of a number.
#include <stdio.h>
#include <math.h>
int main() {
    int n, first_digit, last_digit, digits = 0;
    printf("Enter a number:\n");
    scanf("%d", &n);
    int temp = n;
    last_digit = temp % 10;
    while(temp >= 10) {
        temp /= 10;
        digits++;
    }
    first_digit = temp;
    int pow10 = pow(10, digits);
    int middle = (n % pow10) / 10;
    int result = last_digit * pow10 + middle * 10 + first_digit;
    printf("%d\n", result);

    return 0;
}

//Q42: Write a program to check if a number is a perfect number.
#include<stdio.h>
int main(){
    int num,sum=0;
    printf("enter a number\n");
    scanf("%d",&num);
    for(int i=1;i<num;i++){
        if(num%i==0){
            sum += i;
        }
    }
    sum==num?printf("Perfect Number\n"):printf("Not Perfect Number\n");
    return 0;
}
