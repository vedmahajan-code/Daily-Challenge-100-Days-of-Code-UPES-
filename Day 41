//Q81: Count characters in a string without using built-in length functions.
#include<stdio.h>
int xstrlen(char *arr){
    int length = 0;
    while(*arr != '\0'){
        length++;
        arr++;
    }
    return length;
}
int main() {
    char name[20];
    printf("enter your name\n");
    gets(name);
    int len = xstrlen(name);
    printf("%d\n",len);
    return 0;
}

//Q82: Print each character of a string on a new line.
#include<stdio.h>
void printstr(char *arr){
    while(*arr != '\0'){
        printf("%c\n",*arr);
        arr++;
    }
}
int main() {
    char str[20];
    printf("enter a string\n");
    gets(str);
    printstr(str);
    return 0;
}
