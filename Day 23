//Q45: Write a program to find the sum of the series: 2/3 + 4/7 + 6/11 + 8/15 + ... up to n terms.
#include <stdio.h>
int main(){
    int n,i=1;
    float sum=0,term;
    printf("enter a number till which you want the sum of series\n");
    scanf("%d",&n);
    while(i<=n){
        term =(float)(2*i)/(4*i-1);
        sum+=term;
        i++;
    }
    printf("Approximate sum: %.2f",sum);

    return 0;
}

/*Q46: Write a program to print the following pattern:
*****
*****
*****
*****
*****
*/
#include <stdio.h>
int main(){
    for(int i=1;i<=5;i++){
        for(int num=1;num<=5;num++){
            printf("*");
        }
        printf("\n");
    }
    return 0;
}
