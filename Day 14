//Q27: Write a program to print the sum of the first n odd numbers.

#include<stdio.h>
int main()
{
   int n,odd_num,odd_sum = 0;
   printf("enter a number n ");
   scanf("%d",&n);
   
   for(int i=1;i<=n;i++){
    odd_num = 2*i-1;
    odd_sum += odd_num;
   }
   printf("%d\n",odd_sum);

    return 0;

}

//Q28: Write a program to print the product of even numbers from 1 to n.
#include<stdio.h>
int main(){
  int n,pro=1,even;
  printf("enter an even number till which you want the product\n");
  scanf("%d",&n);
  for(int i=1;2*i<=n;i++){
    even= 2*i;
    pro *= even;
  }
  printf("%d(",pro);
  for(int i=1;2*i<=n;i++){
    even = 2*i;
    if(i==1){
      printf("%d",even);
    }
    else{
      printf("*%d",even);
    }
  }
  printf(")");
  return 0;
}
  
