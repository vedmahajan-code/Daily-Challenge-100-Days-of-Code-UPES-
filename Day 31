//Q61: Search for an element in an array using linear search.
#include <stdio.h>
#include <stdlib.h>
int linear_search(int arr[],int size, int x){
    for(int i=0;i<size;i++){
        if(x==arr[i]){
            return i;
        }
    }
    return -1;
}
int main() {
    int size,num,search_value;
    int *arr;
    printf("enter size of array\n");
    scanf("%d",&size);
    printf("enter numbers in array\n");
    arr=(int*)malloc(size*sizeof(int));
    for(int i=0;i<size;i++){
        scanf("%d",&arr[i]);
    }
    printf("enter the number you want to search in array\n");
    scanf("%d",&num);
    search_value=linear_search(arr,size,num);
    search_value!=-1?printf("Found at index %d",search_value):printf("%d",search_value);
    return 0;
    }

//Q62: Reverse an array without taking extra space.
#include <stdio.h>
#include <stdlib.h>
void reverse(int arr[],int size){
    int temp;
    for(int i=0;i<size/2;i++){
            temp=arr[i];
            arr[i]=arr[size-i-1];
            arr[size-i-1]=temp;
    }
}
int main() {
    int size,search_value;
    int *arr;
    printf("enter size of array\n");
    scanf("%d",&size);
    printf("enter numbers in array\n");
    arr=(int*)malloc(size*sizeof(int));
    for(int i=0;i<size;i++){
        scanf("%d",&arr[i]);
    }
    reverse(arr,size);
    for(int i=0;i<size;i++){
        printf("%d ",arr[i]);
    }
    free(arr);
    return 0;
}
