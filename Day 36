//Q71: Read and print a matrix.
#include<stdio.h>
int main(){
    int row,column;
    printf("enter total no. of rows and columns\n");
    scanf("%d %d",&row,&column);
    int matrix[row][column];
    printf("enter numbers in matrix row wise\n");
    for(int i=0;i<row;i++){
        for(int j=0;j<column;j++){
            scanf("%d",&matrix[i][j]);
        }
    }
    for(int i=0;i<row;i++){
        for(int j=0;j<column;j++){
            printf("%d\t",matrix[i][j]);
        }
        printf("\n");
    }
    return 0;
}

//Q72: Find the sum of all elements in a matrix.
#include<stdio.h>
int main(){
    int row,column,sum=0;
    printf("enter total no. of rows and columns\n");
    scanf("%d %d",&row,&column);
    int matrix[row][column];
    printf("enter numbers in matrix row wise\n");
    for(int i=0;i<row;i++){
        for(int j=0;j<column;j++){
            scanf("%d",&matrix[i][j]);
        }
    }
    for(int i=0;i<row;i++){
        for(int j=0;j<column;j++){
            sum+=matrix[i][j];
        }
    }
    printf("%d",sum);
    return 0;
}
